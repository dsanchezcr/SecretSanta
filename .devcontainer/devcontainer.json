{
  "name": "Secret Santa Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/azure/azure-dev/azd:0.11.1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-cosmosdb",
        "ms-azuretools.vscode-azurestaticwebapps",
        "ms-azuretools.vscode-bicep",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-typescript-next",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "files.associations": {
          "*.css": "tailwindcss"
        }
      }
    }
  },
  "forwardPorts": [5173, 7071, 8081, 10000],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (Vite)",
      "onAutoForward": "openBrowser"
    },
    "7071": {
      "label": "API (Azure Functions)",
      "onAutoForward": "silent"
    },
    "8081": {
      "label": "Cosmos DB Emulator",
      "onAutoForward": "silent"
    },
    "10000": {
      "label": "Azurite Storage",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "npm install && cd api && npm install && (cp local.settings.json.example local.settings.json || node ../scripts/setup-local-settings.js)",
  "postStartCommand": "echo 'üéÅ Secret Santa development environment ready! Press F5 to start.'",
  "remoteUser": "root",
  "containerEnv": {
    "NODE_ENV": "development",
    "ENVIRONMENT": "local"
  }
}
